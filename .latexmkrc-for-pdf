# -*- mode: sh; sh-shell: bash; -*-
# Google 'latexmk latexmkrc' for explanation of this config file
# or see https://mg.readthedocs.io/latexmk.html
# 
# latexmk at unix command line will compile the paper
print "reading .latexmkrc-for-pdf";
$do_cd = 1;
$clean_ext = "bbl nav out snm dvi idv tmp 4tc 4ct out aux log fls fdb_latexmk synctex.gz toc ps out.ps upa upb lg out" ;
$bibtex_use=2;
$pdf_mode = 1;
$rc_report = 1;
$pdflatex="pdflatex -interaction=nonstopmode %O %S";
$aux_out_dir_report = 1;
$silent  = 0;
$cleanup_mode = 1;

# latexmk will not delete files not generated by latex, like svg and css and html files
# Execute a bash command to delete files with specific extensions
system("rm -f *.html *.svg *.css *.mk4 *.cfg _config.yml");

# Ignore the "label(s) may have changed" warning
# 20240724: Claude Sonnet 3.5:
$preview_continuous_mode = 1;
$hash_calc_ignore_pattern{'Labels'} = '^Label(s) may have changed';


